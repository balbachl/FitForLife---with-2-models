    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Stats</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.statDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.statDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.age)
        </dt>
        <dd class="col-sm-10">
